<div class="container">

<h1 class="text-center">Create New Special</h1>

<% if @special.errors.any? %>
    <h2>The following errors prevented the special from being saved</h2>
    <ul>
        <% @special.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_with scope: :special, url: specials_path, local: true do |f| %>

<p>
<%= f.label :restaurant %></br>
<%= f.text_field :restaurantName %>
</p>

<p>
<%= f.label :special %></br>
<%= f.text_area :title %>
</p>

<p>
<%= f.label :Day %></br>
<%= f.text_field :dayOfWeek %>
</p>

<p>
<%= f.label :city %></br>
<%= f.text_field  :town %>
</p>


<p>
<%= f.submit %>
</p>
<% end %>
<%= link_to 'Back to Specials', specials_path %>


</div>