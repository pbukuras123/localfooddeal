<body style="background-color:lightgrey;">
<div class="container">
    <% if @special.errors.any? %>
        <h2>The following errors prevented the special from being saved</h2>
        <ul>
            <% @special.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    <% end %>

    <%= form_with(model: @special, data: {turbo: false}, local: true ) do |f| %>

    <div class="mb-3 row">
        <%= f.label :restaurant, class: "col-2 col-form-label" %>
            <div class="col-10">
                <%= f.text_field :restaurantName, class: "form-control" %>
            </div>
    </div>

    <div class="mb-3 row">
        <%= f.label :special, class: "col-2 col-form-label" %>
            <div class="col-10">
                <%= f.text_area :title, class: "form-control" %>
            </div>
    </div>

    <div class="mb-3 row">
        <%= f.label :Day, class: "col-2 col-form-label" %>
            <div class="col-10">
                <%= f.text_field :dayOfWeek, class: "form-control" %>
            </div>
    </div>

    <div class="mb-3 row">
        <%= f.label :city, class: "col-2 col-form-label" %>
            <div class="col-10">
                <%= f.text_field  :town, class: "form-control" %>
            </div>
    </div>


    <div class="col-auto">   
        <%= f.submit class: "btn btn-outline-light btn-lg" %>
    </div>

    <% end %>

    <%= link_to 'Back to Specials', specials_path %>
</div>